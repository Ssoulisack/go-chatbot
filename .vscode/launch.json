    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/debug",
            "env": {
                "RUST_BACKTRACE": "Max"
            },
            "args": ["${workspaceFolder}/config.yaml"]
        },
        {
            "name": "Attach to process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": 0
        },
        {
            "name": "Debug Main",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}"
        } 
    ]
}